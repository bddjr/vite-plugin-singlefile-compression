{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node16",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": ["src/template", "dist", "node_modules"]
}
